root = true
# top-most EditorConfig file

# Don't use tabs for indentation.
[*]
indent_style = space
charset = utf-8-bom
end_of_line = crlf
trim_trailing_whitespace = false
indent_size = 4

# Code files
[*.{cs,csx,vb,vbx}]
insert_final_newline = true
charset = utf-8

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Powershell files
[*.ps1]
indent_size = 2

# Shell script files
[*.sh]
end_of_line = lf
indent_size = 2
