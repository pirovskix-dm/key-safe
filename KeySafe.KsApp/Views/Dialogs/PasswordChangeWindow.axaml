<Window 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:uc="using:KeySafe.KsApp.UserControls"
    x:Class="KeySafe.KsApp.Views.Dialogs.PasswordChangeWindow"
    Width="480"
    Height="180"
    CanResize="False"
    WindowStartupLocation="CenterOwner"
    Title="PasswordChangeWindow">
    
    <StackPanel Orientation="Vertical" Classes="PasswordChangePanel">
        <uc:KsPasswordField
            Name="OldPasswordField"
            Title="Old password:" />
        <uc:KsPasswordField
            Name="NewPasswordField"
            Title="New password:" />
        <StackPanel Orientation="Horizontal">
            <Button Name="ChangeButton" Content="Change" />
            <Button Name="CancelButton" Content="Cancel" />
        </StackPanel>
        <uc:ErrorField Name="ErrorField"/>
    </StackPanel>
        
</Window>
