<Window
    CanResize="False"
    Height="180"
    Title="PasswordChangeWindow"
    Width="480"
    WindowStartupLocation="CenterOwner"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="KeySafe.KsApp.Views.Dialogs.PasswordChangeWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:KeySafe.KsApp.UserControls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Classes="PasswordChangePanel">
        <uc:KsPasswordField Name="OldPasswordField" Title="Old password:" />
        <uc:KsPasswordField Name="NewPasswordField" Title="New password:" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Change" Name="ChangeButton" />
            <Button Content="Cancel" Name="CancelButton" />
        </StackPanel>
        <uc:ErrorField Name="ErrorField" />
    </StackPanel>

</Window>
