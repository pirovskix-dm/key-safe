<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:uc="using:KeySafe.KsApp.UserControls"
    Width="470"
    Height="220"
    WindowStartupLocation="CenterOwner"
    CanResize="False"
    x:Class="KeySafe.KsApp.Views.SourceItemWindow"
    Title="Edit Source">

    <StackPanel Classes="SourceItemEditPanel">
        <uc:KsTextField
            Name="NameField"
            Title="Name:" />
        <uc:KsTextField
            Name="LoginField"
            Title="Login:" />
        <uc:KsPasswordField
            Name="PasswordField"
            Title="Password:" />
        <StackPanel>
            <Button Name="SaveButton" Content="Save" />
            <Button Name="CancelButton" Content="Cancel" />
        </StackPanel>
        <uc:ErrorField Name="ErrorField" />
    </StackPanel>

</Window>